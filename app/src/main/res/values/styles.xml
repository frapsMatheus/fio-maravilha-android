<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/toolbar_color</item>
        <item name="colorAccent">#3884AA</item>
    </style>

    <style name="AppTheme.FullScreen" parent="@style/Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/toolbar_color</item>
        <item name="colorAccent">#3884AA</item>
    </style>

    <style name="CustomDigitsTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorOrange</item>
        <item name="android:textColorSecondary">@color/colorLightOrange</item>
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="android:textColorLink">#3884AA</item>
        <item name="colorAccent">#3884AA</item>
        <item name="android:actionBarStyle">@style/OrangeActionBar</item>
        <item name="actionBarStyle">@style/OrangeActionBar</item>

    </style>

    <style name="OrangeActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorOrange</item>
        <item name="background">@color/colorOrange</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/toolbar_color</item>
        <item name="colorAccent">#3884AA</item>
    </style>

    <style name="TitleStyle" parent="@android:style/TextAppearance.Widget.TextView">

        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>
