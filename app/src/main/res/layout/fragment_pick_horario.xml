<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/round_orange"
        android:paddingTop="8dp">

        <TextView
            android:text="PASSO 4 DE 4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_passo_label"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:textColor="@color/colorOrange"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:text="ESCOLHA O HORÁRIO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:background="@drawable/round_black_empty"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:text="O LIMITE DE ATRASO É DE 10 MINUTOS."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:id="@+id/horarios_recyclerView"
            android:scrollbars="vertical"
            android:paddingLeft="2dp"
            android:paddingRight="2dp" />

        <Button
            android:text="PRÓXIMO PASSO >"
            android:layout_width="match_parent"
            android:id="@+id/tx_proximo"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@color/colorBlack"
            android:textColor="@color/colorOrange"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0"
            android:layout_height="48dp" />
    </LinearLayout>
</LinearLayout>