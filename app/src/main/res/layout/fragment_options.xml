<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="CONFIGURAÇÕES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/header_agenda_title"
                android:textAlignment="center"
                android:textColor="@color/colorOrange"
                android:background="@drawable/agenda_round_background"
                android:padding="6dp"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorOrange"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:background="@color/colorBlack">

                <TextView
                    android:text="Sexta, 10 De Fevereiro De 2017"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/agenda_data"
                    android:layout_weight="1"
                    android:textColor="@color/colorLightOrange"
                    android:textSize="17sp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="4dp" />

                <TextView
                    android:text="10:30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/agenda_hora"
                    android:layout_weight="0"
                    android:background="@drawable/agenda_round_background"
                    android:textColor="@color/colorOrange"
                    android:textSize="19sp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:gravity="center_vertical"
                    android:textAlignment="center" />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorOrange"
                android:layout_marginLeft="16dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:background="@color/colorBlack">

                <TextView
                    android:text="Sexta, 10 De Fevereiro De 2017"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/agenda_data"
                    android:layout_weight="1"
                    android:textColor="@color/colorLightOrange"
                    android:textSize="17sp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="4dp" />

                <TextView
                    android:text="10:30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/agenda_hora"
                    android:layout_weight="0"
                    android:background="@drawable/agenda_round_background"
                    android:textColor="@color/colorOrange"
                    android:textSize="19sp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:gravity="center_vertical"
                    android:textAlignment="center" />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorOrange"/>
            <TextView
                android:text="ENDEREÇO E CONTATO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/header_agenda_title"
                android:textAlignment="center"
                android:textColor="@color/colorOrange"
                android:background="@drawable/agenda_round_background"
                android:padding="6dp"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:text="FIO MARAVILHA, Asa Norte."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textColor="@color/colorOrange" />

            <TextView
                android:text="CLN 202 Bloco B Loja 75,  Brasília, DF. (61) 3202 - 5006"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textAlignment="center"
                android:textSize="19sp"
                android:textColor="@color/colorTextoLightOrange"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:text="REDES SOCIAIS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/header_agenda_title"
                android:textAlignment="center"
                android:textColor="@color/colorOrange"
                android:background="@drawable/agenda_round_background"
                android:padding="6dp"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/fb_link"
                    android:id="@+id/options_fb_button"
                    android:layout_weight="1"
                    android:background="@null" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/twitter_link"
                    android:id="@+id/options_twitter_button"
                    android:layout_weight="1"
                    android:background="@null" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/instagram_link"
                    android:id="@+id/options_insta_button"
                    android:layout_weight="1"
                    android:background="@null" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/email_link"
                    android:id="@+id/options_email_button"
                    android:layout_weight="1"
                    android:background="@null" />
            </LinearLayout>

            <Button
                android:text="SAIBA MAIS SOBRE O DIA DO NOIVO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:background="@null"
                android:textColor="@color/colorOrange"
                android:textAlignment="center"
                android:layout_marginTop="8dp" />


        </LinearLayout>

    </ScrollView>
</LinearLayout>