<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackWithAlpha"
    android:padding="16dp">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:layout_centerInParent="true">

    <include layout="@layout/toolbar_dialog"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">

            <TextView
                android:text="DATA:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="0"
                android:textColor="@color/colorOrange"
                android:textSize="19sp" />

            <TextView
                android:text="18/09/16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_date"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textColor="@color/colorLightOrange"
                android:layout_marginLeft="8dp" />

            <TextView
                android:text="HORA:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="0"
                android:textColor="@color/colorOrange"
                android:textSize="19sp" />

            <TextView
                android:text="11:30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_hour"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textColor="@color/colorLightOrange"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">

            <TextView
                android:text="SERVIÇO:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="@color/colorOrange"
                android:textSize="19sp" />

            <TextView
                android:text="CABELO, BARBA, PÉZINHO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_servicos"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textColor="@color/colorLightOrange"
                android:layout_marginLeft="8dp" />
            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:text="PROFISSIONAL:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="@color/colorOrange"
                android:textSize="19sp" />

            <TextView
                android:text="LEANDRO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_barbeiro"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textColor="@color/colorLightOrange"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/cancel_background"
            android:text="CANCELAR"
            android:textColor="@color/colorLightOrange"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
</RelativeLayout>